{
    "manifest_version": 3,
    "name": "Text Recognition",
    "version": "1.0",
    "description": "An extension for recognising and translating text from images",
    "icons": {
      "128": "icon.png"
    },
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css": ["style.css"],
        "js": [
          "jquery-3.7.1.min.js",
          "script.js"
        ]
      }
    ],     
    "permissions": [
      "scripting",
      "cookies",
      "clipboardRead",
      "clipboardWrite"
    ]
}
  